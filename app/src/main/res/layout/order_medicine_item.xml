<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/orderMedicineItemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_5"
    android:layout_marginStart="@dimen/margin_5"
    android:layout_marginEnd="@dimen/margin_5"
    android:background="@color/background"
    app:cardCornerRadius="@dimen/corner_radius_15"
    app:cardElevation="@dimen/radius_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/orderMedicineListItemImage"
            android:layout_width="@dimen/layout_size_60"
            android:layout_height="@dimen/layout_size_60"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:scaleType="centerCrop"
            android:src="@drawable/medicine"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:id="@+id/orderMedicineItemName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_30"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_toEndOf="@id/orderMedicineListItemImage"
            android:text="@string/medicine_name"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20" />

        <TextView
            android:id="@+id/done"
            android:layout_width="@dimen/margin_40"
            android:layout_height="@dimen/margin_18"
            android:textColor="@color/navy_blue"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_2"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/orderMedicineItemCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderMedicineItemName"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_7"
            android:layout_marginBottom="@dimen/margin_12"
            android:layout_toEndOf="@id/orderMedicineListItemImage"
            android:maxLines="1"
            android:text="@string/hint_company_name"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>